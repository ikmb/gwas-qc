BootStrap: docker
From: ubuntu:17.10
#OSVersion: zesty
#MirrorURL: ftp://ftp.rz.uni-kiel.de/pub2/linux/ubuntu/

%post -c /bin/bash

echo "Installing basic build system"
#sed -i 's/$/ universe/' /etc/apt/sources.list
apt -y update
apt -y install build-essential locales wget unzip r-base git tclsh bash psmisc curl gnuplot ghostscript tabix moreutils gawk libgfortran3 r-cran-rserve

echo "Setting bash as default shell (instead of dash, thanks Canonical Inc)"
rm /bin/sh
ln -s /bin/bash /bin/sh

locale-gen en_US en_US.UTF-8 de_DE.UTF-8 de_DE

